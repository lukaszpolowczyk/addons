{
   // Use IntelliSense to learn about possible Node.js debug attributes.
   // Hover to view descriptions of existing attributes.
   // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
   "version": "0.2.0",
   "configurations": [
      {
         "type": "firefox",
         "request": "launch",
         "reAttach": true,
         "name": "Launch add-on",
         "addonType": "addonSdk",
         "addonPath": "${workspaceRoot}"
      },
      {
         "type": "firefox",
         "request": "launch",
         "reAttach": true,
         "name": "Launch localhost",
         "url": "http://localhost:8034/index.html",
         "webRoot": "${workspaceRoot}"
      },
      {
         "type": "node",
         "request": "launch",
         "name": "Launch Program",
         "program": "${file}"
      },
      {
         "type": "node",
         "request": "attach",
         "name": "Attach to Port",
         "address": "localhost",
         "port": 5858
      }
   ]
}